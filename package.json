{
  "name": "scouteando-workspace",
  "version": "1.0.0",
  "description": "Scouteando fullstack project workspace with Angular frontend and Strapi backend",
  "scripts": {
    "frontend:install": "cd frontend && npm install",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:test": "cd frontend && npm test",
    "frontend:deploy": "cd frontend && npm run deploy",
    "backend:install": "cd backend && npm install",
    "backend:start": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:prod": "cd backend && npm start",
    "backend:console": "cd backend && npm run console",
    "install:all": "npm run frontend:install && npm run backend:install",
    "dev": "concurrently \"npm run backend:start\" \"npm run frontend:start\"",
    "start:frontend": "npm run frontend:start",
    "start:backend": "npm run backend:start",
    "install": "npm run install:all",
    "start": "npm run dev",
    "build": "npm run frontend:build && npm run backend:build",
    "test": "npm run frontend:test",
    "deploy": "npm run frontend:deploy"
  },
  "keywords": [
    "angular",
    "strapi",
    "frontend",
    "backend",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
